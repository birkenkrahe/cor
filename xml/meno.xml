  <assessment title="Quiz on Plato's Meno Video Reading">
    <section ident="root_section">
      <!-- Question 1 -->
      <item title="Question 1" ident="Q1">
        <presentation>
          <material>
            <mattext texttype="text/html">What is the main question that Socrates and Meno discuss in the dialogue?</mattext>
          </material>
          <response_lid ident="response1">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">Can virtue be taught?</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">What is the nature of justice?</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">How can one achieve happiness?</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">What is the definition of piety?</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="100" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">A</varequal>
            </conditionvar>
            <setvar action="Set">100</setvar>
          </respcondition>
        </resprocessing>
      </item>

